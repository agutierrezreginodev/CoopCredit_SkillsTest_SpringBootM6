{
  "info": {
    "name": "CoopCredit API Collection",
    "description": "Colección completa de endpoints para el Sistema de Solicitudes de Crédito",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register - Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\",\n  \"role\": \"ROLE_ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register - Analista",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"analista1\",\n  \"password\": \"analista123\",\n  \"role\": \"ROLE_ANALISTA\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register - Afiliado",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"juan.perez\",\n  \"password\": \"afiliado123\",\n  \"role\": \"ROLE_AFILIADO\",\n  \"documento\": \"1017654311\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Affiliates",
      "item": [
        {
          "name": "Create Affiliate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documento\": \"1017654311\",\n  \"nombre\": \"Juan Pérez García\",\n  \"salario\": 3000000.00,\n  \"fechaAfiliacion\": \"2022-01-15\",\n  \"estado\": \"ACTIVO\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/affiliates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "affiliates"]
            }
          }
        },
        {
          "name": "Get All Affiliates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/affiliates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "affiliates"]
            }
          }
        },
        {
          "name": "Get Affiliate by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/affiliates/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "affiliates", "1"]
            }
          }
        },
        {
          "name": "Update Affiliate",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documento\": \"1017654311\",\n  \"nombre\": \"Juan Pérez García\",\n  \"salario\": 3500000.00,\n  \"fechaAfiliacion\": \"2022-01-15\",\n  \"estado\": \"ACTIVO\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/affiliates/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "affiliates", "1"]
            }
          }
        },
        {
          "name": "Change Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/affiliates/1/status?newStatus=INACTIVO",
              "host": ["{{baseUrl}}"],
              "path": ["api", "affiliates", "1", "status"],
              "query": [
                {
                  "key": "newStatus",
                  "value": "INACTIVO"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Credit Applications",
      "item": [
        {
          "name": "Create Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"afiliadoId\": 1,\n  \"montoSolicitado\": 5000000.00,\n  \"plazoMeses\": 36,\n  \"tasaPropuesta\": 12.5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/applications",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "Evaluate Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applications/1/evaluate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications", "1", "evaluate"]
            }
          }
        },
        {
          "name": "Get All Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applications",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "Get Pending Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applications/pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications", "pending"]
            }
          }
        },
        {
          "name": "Get Applications by Affiliate",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applications/affiliate/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications", "affiliate", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Actuator",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "metrics"]
            }
          }
        },
        {
          "name": "Prometheus",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/prometheus",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "prometheus"]
            }
          }
        }
      ]
    }
  ]
}
